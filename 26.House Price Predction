import pandas as pd
import numpy as np
from sklearn.linear_model import LinearRegression

# Load dataset
df = pd.read_csv('/content/housing_prices.csv')

# Features and target
X = df[['Area_sqft', 'Bedrooms', 'Location_Score']]
y = df['Price']

# Train Linear Regression model
model = LinearRegression()
model.fit(X, y)

# User input for new house
area = float(input("Enter area of house (sqft): "))
bedrooms = int(input("Enter number of bedrooms: "))
location = int(input("Enter location score (1-5): "))

# Create input array
new_house = np.array([[area, bedrooms, location]])

# Predict price
predicted_price = model.predict(new_house)

print("\nPredicted House Price:", predicted_price[0])
